<IfModule mod_rewrite.c>
    RewriteEngine on

    <FilesMatch ".+\.(json|tpl|ini)$">
        <IfModule mod_authz_core.c>
            # Apache 2.4
            Require all denied
        </IfModule>
        <IfModule !mod_authz_core.c>
            # Apache 2.2
            Order deny,allow
            Deny from all
        </IfModule>
    </FilesMatch>

    Options -Indexes

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule . index.php [L]
</IfModule>